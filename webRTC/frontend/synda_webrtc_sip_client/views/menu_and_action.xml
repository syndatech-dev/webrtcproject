<odoo>
    <!-- Définition de l'action pour appeler l'interface -->
    <record id="action_call_interface" model="ir.actions.act_window">
        <field name="name">Call Interface</field>
        <field name="res_model">web.webrtc.client</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="call_interface" />
