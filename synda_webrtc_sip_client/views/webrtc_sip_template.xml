<odoo>
    <template id="webrtc_sip_client" name="WebRTC SIP Client">
        <!-- Appel du layout principal d'Odoo -->
        <t t-call="web.layout">
            <div class="o_webrtc_sip_client container mt-5">
                <!-- Titre principal -->
                <h1 class="text-center text-primary">WebRTC SIP Client</h1>
                
                <!-- Carte principale -->
                <div class="card shadow-lg mt-4">
                    <div class="card-body">
                        <!-- Introduction -->
                        <p class="text-center text-muted">
                            Bienvenue dans l'interface utilisateur WebRTC SIP Client. Cette interface est prÃªte pour vos besoins en communication SIP.
                        </p>

                        <!-- Formulaire SIP -->
                        <form id="sip-form" class="mt-4">
                            <div class="mb-3">
                                <label for="sip-server" class="form-label">SIP Server</label>
                                <input id="sip-server" name="sip-server" class="form-control" type="text" placeholder="wss://sip.example.com:5061/ws" required/>
                            </div>
                            <div class="mb-3">
                                <label for="sip-user" class="form-label">SIP Username</label>
                                <input id="sip-user" name="sip-user" class="form-control" type="text" placeholder="Votre nom d'utilisateur SIP" required/>
                            </div>
                            <div class="mb-3">
                                <label for="sip-password" class="form-label">SIP Password</label>
                                <input id="sip-password" name="sip-password" class="form-control" type="password" placeholder="Votre mot de passe SIP" required/>
                            </div>

                            <!-- Boutons d'action -->
                            <div class="text-center">
                                <button id="register-sip" type="button" class="btn btn-primary me-2">Register</button>
                                <button id="make-call" type="button" class="btn btn-success me-2">Make Call</button>
                                <button id="end-call" type="button" class="btn btn-danger">End Call</button>
                            </div>
                        </form>

                        <!-- Statuts -->
                        <div class="alert alert-info mt-4" role="alert" id="sip-status">
                            Status: Not Registered
                        </div>
                        <div class="alert alert-secondary" role="alert" id="call-status">
                            Call Status: Idle
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
