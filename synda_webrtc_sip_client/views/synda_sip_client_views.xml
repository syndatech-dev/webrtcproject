<odoo>
    <record id="view_synda_sip_client_form" model="ir.ui.view">
        <field name="name">synda.sip.client.form</field>
        <field name="model">synda.sip.client</field>
        <field name="arch" type="xml">
        <link rel="stylesheet" type="text/css" href="/synda_webrtc_sip_client/static/src/css/style.css"/>
            <form string="SIP Client">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="sip_username"/>
                        <field name="sip_password" password="True"/>
                        <field name="server_address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_synda_sip_client_tree" model="ir.ui.view">
        <field name="name">synda.sip.client.tree</field>
        <field name="model">synda.sip.client</field>
        <field name="arch" type="xml">
            <tree string="SIP Clients">
                <field name="name"/>
                <field name="sip_username"/>
                <field name="server_address"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_synda_sip_client_root" name="SIP Client" sequence="1"/>
    <menuitem id="menu_synda_sip_client" name="Clients" parent="menu_synda_sip_client_root" action="action_synda_sip_client"/>

    <record id="action_synda_sip_client" model="ir.actions.act_window">
        <field name="name">SIP Clients</field>
        <field name="res_model">synda.sip.client</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
