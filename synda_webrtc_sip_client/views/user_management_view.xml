<odoo>
    <record id="view_user_form" model="ir.ui.view">
        <field name="name">webrtc.user.form</field>
        <field name="model">webrtc.sip.user</field>
        <field name="arch" type="xml">
            <form string="Utilisateur SIP">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sip_username"/>
                        <field name="sip_status" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_user_tree" model="ir.ui.view">
        <field name="name">webrtc.user.tree</field>
        <field name="model">webrtc.sip.user</field>
        <field name="arch" type="xml">
            <tree string="Utilisateurs SIP">
                <field name="name"/>
                <field name="sip_username"/>
                <field name="sip_status"/>
            </tree>
        </field>
    </record>
</odoo>
