<odoo>
    <template id="dashboard_view" name="Tableau de bord WebRTC">
        <t t-call="web.layout">
            <div class="container-fluid">
                <div class="row my-4">
                    <h1 class="text-center mb-4">Tableau de bord WebRTC</h1>
                </div>
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <h5>Appels effectués</h5>
                                <h3>53</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h5>Utilisateurs actifs</h5>
                                <h3>18</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <h5>Durée totale (min)</h5>
                                <h3>245</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body">
                                <h5>Erreurs détectées</h5>
                                <h3>5</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-6">
                        <canvas id="callChart"></canvas>
                    </div>
                    <div class="col-md-6">
                        <canvas id="userChart"></canvas>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
